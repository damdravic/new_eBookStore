<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>servlets.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eBookAddNewServlet</servlet-name>
        <servlet-class>servlets.eBookAddNewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eBookEditServlet</servlet-name>
        <servlet-class>servlets.eBookEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManage</servlet-name>
        <servlet-class>servlets.UserManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buy</servlet-name>
        <servlet-class>servlets.Buy</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/Authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eBookAddNewServlet</servlet-name>
        <url-pattern>/eBookAddNewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eBookEditServlet</servlet-name>
        <url-pattern>/eBookEditServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManage</servlet-name>
        <url-pattern>/UserManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buy</servlet-name>
        <url-pattern>/Buy</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
